/* pages/cart/cart.wxss */
.container {
  padding: 20px;
}

.title{
text-align: center;
font-size: 24px;
font-weight: bold;
height: 20px;
}

.btn{
  color: black;
  font-size:15px;
  font-weight: 900;
  padding: 5px;
  width: 15%;
}

.cart-item {
  display: flex;
  margin-bottom: 20px;
  width: 95%;
  height: 120px;
  background-color: whitesmoke;
}

.cart-item-image {
  width: 100px;
  height: 100px;
}

.cart-item-info {
  margin-left: 10px;
  flex: 1;
}

.cart-item-name {
  font-size: 20px;
  margin-left: 10px;
}

.cart-item-price {
  color: #f60;
  margin-top: 5px;
  margin-left: 15px;
}

.cart-item-quantity {
  display: flex;
  align-items: center;
  margin-top: 15px;
  width:130px;
}

.quantity-btn {
  background-color: #f60;
  color: white;
  border: none;
  padding: 5px;
  width: 30px;
  text-align: center;
  font-size: 10px;
  border-radius: 100%;
  font-weight: 900;
}

.quantity {
  margin: 0 10px;
  font-size:18px;
}

.delete-btn {
  background-color: #ff4d4d;
  color: white;
  font-size:15px;
  font-weight: 900;
  border: none;
  padding: 5px;
  margin-top: 35px;
  width: 20%;
  margin-bottom: 40px;
}

.total {
  margin-top: 30px;
  text-align: center;
  width: 90%;
}
.allprice{
  font-size: 20px;
}

.checkout {
  background-color: #f60;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 15px;
  width: 100%;
}

<!--pages/order/order.wxml-->
<!-- 个人中心页面 -->
<view class="container">
<!-- 个人信息区域 -->
  <view class="profile-section">
    <image src="/图片/头像.png" alt="用户头像" class="avatar"></image>
    <view class="profile-info">
      <text class="username">张三
      </text>
      <text class="email">zhangsan@example.com</text>
    </view>
  </view>
  
  <!-- 菜单区域 -->
  <view class="menu">
    <view class="menu-item" bindtap="navigateToOrders">
      <text>我的订单</text>
    </view>
    <view class="menu-item" bindtap="navigateToSettings">
      <text>设置</text>
    </view>
    <view class="menu-item" bindtap="navigateToHelp">
      <text>帮助与反馈</text>
    </view>
    <view class="menu-item" bindtap="logout">
      <text>退出登录</text>
    </view>
  </view>
</view>
/* pages/checkout/checkout.wxss */
.container {
  padding: 20px;
}

.order-summary {
  margin-bottom: 20px;
  width: 90%;
}
.title{
  text-align: center;
}
.summary-title {
  font-size: 25px;
  margin-bottom: 10px;
  font-weight: 600;
}

.order-item {
  display: flex;
  margin-top: 20px;
background-color:whitesmoke;
}

.order-item-image {
  width: 80px;
  height: 80px;
}

.order-item-info {
  margin-left: 10px;
  flex: 1;
}

.order-item-name {
  font-size: 20px;
  margin-left: 15px;
}

.order-item-price {
  color: #f60;
  margin-left: 40px;
  font-size: 20px;
}

.order-item-quantity {
  margin-top: 5px;
  margin-left: 15px;
}

.order-total {
  text-align: right;
  font-size: 20px;
  margin-top: 10px;
}

.payment-method {
  margin-bottom: 20px;
}

.method-title {
  font-size: 18px;
  margin-bottom: 10px;
}

.picker {
  background-color: #f5f5f5;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  text-align: center;
}

.pay-button {
  background-color: #f60;
  color: white;
  padding: 15px;
  border: none;
  border-radius: 15px;
  width: 100%;
}
